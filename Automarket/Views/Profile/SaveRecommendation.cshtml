@model Automarket.Domain.ViewModels.Recommendation.RecommendationViewModel

@* <h2>@ViewBag.Message</h2> *@
<form id="formSaveRecommendation">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.PatientName" class="col-form-label text-black-50"></label>
            <input asp-for="@Model.PatientName" value='@ViewData["UserName"]' type="text" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Description" class="col-form-label text-black-50"></label>
            <input asp-for="@Model.Description" type="text" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.AuthorName" hidden="hidden" class="col-form-label text-black-50"></label>
            <input asp-for="@Model.AuthorName" value="@User.Identity.Name" hidden="hidden" type="text" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.DateCreate" hidden="hidden" class="col-form-label text-black-50"></label>
            <input asp-for="@Model.DateCreate" value="@DateTime.Now.Date.ToString("dd/MM/yyyy")" hidden="hidden" type="text" class="form-control">
        </div>
    </div>
</form>
